{
    "manifest_version": 3,
    "name": "Shelve",
    "version": "1.0.0",
    "description": "Declutter your browser - save, organize, and restore tabs with one click. Auto-groups, search, duplicate detection, and more.",
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "commands": {
        "save-all-tabs": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Shelve all tabs in the current window"
        },
        "save-current-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "Shelve the current tab"
        }
    }
}